<!DOCTYPE html>
<html>
  <head>
    <title>ENTR451: User Security</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
  </head>

  <body>
     <!-- if user logged in-->
  <p>
     <% if @current_user %>
      Hey, <%= @current_user["first_name"]%>
      <a href="/logout">Logout</a>
  </p>
    <% else %>
     <!-- else -->
    <p>
      <a href="/users/new">Login</a>
      <a href="/users/new">Sign Up</a>
    </p>
    <% end %>

    <p>
      <%= flash["notice"] %>
    </p>

    <%= yield %>

  </body>
</html>
